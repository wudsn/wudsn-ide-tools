DEVNUM	= DATAORIGIN+$000D
BUF	= DATAORIGIN+$000E

@VarData	= DEVNUM
@VarDataSize	= 3

@exit
	.ifdef @new
	lda <@VarData
	sta :ztmp
	lda >@VarData
	ldy #@VarDataSize-1
	jmp @FreeMem
	els
	rts						; ret
	eif
