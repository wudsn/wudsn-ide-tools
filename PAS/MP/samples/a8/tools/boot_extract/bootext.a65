.endl							; UNIT SIODISK
l_0023

; optimize FAIL ('@print', bootext.pas), line = 17

	@printSTRING #CODEORIGIN+$0000
	@printEOL

; optimize FAIL ('@print', bootext.pas), line = 19

	lda DENSITY
	jsr @printBYTE._a
	@printEOL

; optimize OK (bootext.pas), line = 21

	lda #$40
	sta BUF
	lda #$BC
	sta BUF+1

; optimize OK (bootext.pas), line = 23

	lda #$02
	sta SIODISK.READBOOT.DEVNUM
	lda BUF
	sta SIODISK.READBOOT.BUF
	lda BUF+1
	sta SIODISK.READBOOT.BUF+1
	jsr SIODISK.READBOOT
; AssignFile

; optimize OK (bootext.pas), line = 25

	mwy F :bp2
	ldy #s@file.pfname
	lda #$10
	sta (:bp2),y
	iny
	lda #$20
	sta (:bp2),y
	ldy #s@file.status
	lda #$00
	sta (:bp2),y
; Rewrite
	ldy #s@file.record
	lda #$01
	sta (:bp2),y
	iny
	lda #$00
	sta (:bp2),y

	txa:pha
	sec
	@openfile F, #8
	pla:tax

; BlockWrite

; optimize OK (bootext.pas), line = 26

	lda <P
	sta :bp2
	lda >P
	sta :bp2+1
	ldy #$00
	lda (:bp2),y
	sta :STACKORIGIN+9
	iny
	lda (:bp2),y
	sta :STACKORIGIN+STACKWIDTH+9
	mwy F :bp2
	ldy #s@file.buffer
	lda :STACKORIGIN+9
	sta (:bp2),y
	iny
	lda :STACKORIGIN+STACKWIDTH+9
	sta (:bp2),y
	ldy #s@file.nrecord
	lda #$80
	sta (:bp2),y
	iny
	lda #$01
	sta (:bp2),y

	txa:pha
	sec
	@readfile F, #11
	pla:tax

; CloseFile

	txa:pha
	sec
	@closefile F
	pla:tax

; --- RepeatUntilProlog
l_00BE

; optimize FAIL ('CRT.KEYPRESSED', bootext.pas), line = 29

	jsr CRT.KEYPRESSED
	lda CRT.KEYPRESSED.RESULT
	jeq l_00BE

